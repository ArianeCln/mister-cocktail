<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="card">

        <h1 class="text-center"><%= @cocktail.name %></h1>

      </div>
      <hr>
      <div class="card">
        <h4 class="text-center">Ingredients : </h4>
        <% @restaurant.ingredients.each do |ingredient| %>
        <ul class="list-unstyled" >
          <li><%=ingredient.name %></li>
          <li><em>Avis : <%= ingredient.content %></em></li>
          <li>Créé le <%= ingredient.created_at.strftime('%d.%m%y') %></li>
        </ul>
        <hr>
        <% end %>
      </div>


      <h5 class=""><strong>Add a new Review</strong></h5>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.label :rating %> <br> <%=render 'shared/stars' %>
        <%= f.button :submit, class: "btn btn-primary btn-block" %>
      <% end %>


    </div>
  </div>
</div>

